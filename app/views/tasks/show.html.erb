<h1> <%= @task.title %></h1>
<p> <%= @task.details %></p>
<% if @task.completed == false %>
  <p><i class="far fa-square"></i> This task is not completed yet</p>
<% else %>
  <p><i class="far fa-check-square"></i> Task is completed</p>
<% end %>

<%= link_to "Edit", edit_task_path(@task) %>
<br>
<%= link_to "Go back", all_task_path %>
